<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpPage"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/signuphead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="55dp"
        android:text="SIGN UP"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/emailsignup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailsignup"
        android:layout_width="287dp"
        android:layout_height="73dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="39dp"
        android:ems="10"
        android:hint="enter email"
        android:inputType="textEmailAddress"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/passwordsignup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuphead" />

    <EditText
        android:id="@+id/passwordsignup"
        android:layout_width="276dp"
        android:layout_height="78dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="73dp"
        android:ems="10"
        android:hint=" enter password to set"
        android:inputType="textPassword"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/signupbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailsignup" />

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="133dp"
        android:layout_height="49dp"
        android:layout_marginBottom="29dp"
        android:background="@color/teal_200"
        android:text="Sign Up"
        app:layout_constraintBottom_toTopOf="@+id/signinbtn"
        app:layout_constraintStart_toStartOf="@+id/signinbtn"
        app:layout_constraintTop_toBottomOf="@+id/passwordsignup" />

    <Button
        android:id="@+id/signinbtn"
        android:layout_width="133dp"
        android:layout_height="55dp"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="94dp"
        android:background="@color/teal_200"
        android:text="Sign In"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>